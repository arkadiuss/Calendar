<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="564.0" style="-fx-background-image: url('https://www.myfreetextures.com/wp-content/uploads/2011/06/brushedsteel4.jpg');" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.presenter.RegisterViewPresenter">
    <children>
        <BorderPane layoutX="100.0" layoutY="39.0" prefHeight="322.0" prefWidth="365.0">
            <center>
                <GridPane prefHeight="251.0" prefWidth="553.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Username" textFill="WHITE" />
                        <Label text="Email address" textFill="WHITE" GridPane.rowIndex="1" />
                        <Label text="Password" textFill="WHITE" GridPane.rowIndex="2" />
                        <TextField fx:id="usernameField" GridPane.columnIndex="1" />
                  <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="51.0" prefWidth="553.0" spacing="40.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUp" text="Sign Up" />
                        <Button fx:id="cancelButton" alignment="CENTER" cancelButton="true" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
                    </children>
                </HBox>
            </bottom>
            <top>
                <Label text="Register" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
            </top>

        </BorderPane>
    </children>
</AnchorPane>
