<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<HBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="526.0" prefWidth="889.0" spacing="10.0"
      style="-fx-background-image: url('https://www.myfreetextures.com/wp-content/uploads/2011/06/brushedsteel4.jpg');"
      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.presenter.CalendarViewPresenter">
    <children>
        <VBox fx:id="leftVbox" prefHeight="516.0" prefWidth="284.0" spacing="80.0">
            <children>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <Label fx:id="welcomeLabel" text="Welcome" textFill="WHITE" wrapText="true"
                               BorderPane.alignment="CENTER">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                    </center>
                </BorderPane>
                <ListView fx:id="calendarsList" prefHeight="314.0" prefWidth="218.0"
                          style="-fx-background-color: #AEADAD;">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ListView>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="25.0">
                    <children>
                        <Label text="Type calendar name" textFill="WHITE">
                            <padding>
                                <Insets left="35.0"/>
                            </padding>
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="-20.0"/>
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="newCalendarName" alignment="CENTER" style="-fx-background-color: #AEADAD;"
                                   text="&lt;&lt;calendar name&gt;&gt;">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="addCalendarButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#handleAddNewCalendar" style="-fx-background-color: #AEADAD;" text="Add"
                                textAlignment="CENTER">
                            <opaqueInsets>
                                <Insets left="50.0"/>
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets left="75.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
        <VBox prefHeight="526.0" prefWidth="570.0">
            <children>
                <HBox alignment="CENTER" prefHeight="68.0" prefWidth="544.0" spacing="30.0">
                    <children>
                        <Label text="Selected date:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="datePicker" onAction="#handleDatePickerChange"
                                    style="-fx-background-color: #AEADAD;"/>
                        <Button fx:id="setCurrentDateButton" mnemonicParsing="false"
                                onAction="#handleSetCurrentDateButton" text="Set current"/>
                    </children>
                </HBox>
                <TabPane prefHeight="395.0" prefWidth="544.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <!--                        <Tab fx:id="dayViewTab" text="Day" />-->
                        <!--                        <Tab fx:id="weekViewTab" text="Week" />-->
                        <Tab fx:id="monthViewTab" text="Month"/>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
        <VBox alignment="CENTER" prefHeight="526.0" prefWidth="212.0" spacing="10.0">
            <children>
                <VBox prefHeight="121.0" prefWidth="147.0"/>
                <ComboBox fx:id="calendarsCombobox" prefHeight="31.0" prefWidth="185.0"
                          promptText="Select calendar..."/>
                <TextField fx:id="eventNameField" promptText="Event Name..."/>
                <TextField fx:id="placeNameField" promptText="Place Name..."/>
                <TextField fx:id="addressNameField" promptText="Address..."/>
                <DatePicker fx:id="eventStartDatePicker" promptText="Start Date"/>
                <Label text="Start time (HH:MM)" textFill="WHITE">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <HBox prefHeight="31.0" prefWidth="147.0">
                    <children>
                        <Spinner fx:id="spinnerStartHour" BorderPane.alignment="CENTER">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="23" initialValue="0"
                                                                                amountToStepBy="1"/>
                            </valueFactory>
                        </Spinner>
                        <Spinner fx:id="spinnerStartMinute" BorderPane.alignment="CENTER">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0"
                                                                                amountToStepBy="1"/>
                            </valueFactory>
                        </Spinner>
                    </children>
                </HBox>
                <DatePicker fx:id="eventEndDatePicker" promptText="End Date"/>
                <Label text="End time (HH:MM)" textFill="WHITE">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <HBox prefHeight="32.0" prefWidth="147.0">
                    <children>
                        <Spinner fx:id="spinnerEndHour" BorderPane.alignment="CENTER">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="23" initialValue="0"
                                                                                amountToStepBy="1"/>
                            </valueFactory>
                        </Spinner>
                        <Spinner fx:id="spinnerEndMinute" BorderPane.alignment="CENTER">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="59" initialValue="0"
                                                                                amountToStepBy="1"/>
                            </valueFactory>
                        </Spinner>
                    </children>
                </HBox>
                <Button fx:id="addEventButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleAddEvent" text="Add event" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
            </children>
            <HBox.margin>
                <Insets bottom="10.0"/>
            </HBox.margin>
        </VBox>
    </children>
</HBox>
